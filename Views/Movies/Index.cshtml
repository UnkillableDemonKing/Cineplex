@model IEnumerable<GoogleLogin.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/Movies.css" rel="stylesheet" />

<h2>Search Via Movie</h2>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString"
                      value="@ViewData["currentFilter"]" />
        <input type="submit" value="Filter" />
    </p>
</form>



<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/deadpool.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/joy.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/revenant.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/right.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">

            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    @foreach (var item in Model)
    {
        <div class="moviepagebox">
            <div class="moviepageboxInner">
                <img src="@Url.Content(item.ImageUrl)" />
                <a asp-action="Details" asp-route-id="@item.MovieId">
                    <div class="moviepageoverlay">
                        <div class="moviepagetext">
                            <p style="text-align:center">@Html.DisplayName(item.Title)</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
